<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_form_projects_inherit" model="ir.ui.view">
            <field name="name">view_employee_form_projects_inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='public']/div[@id='o_work_employee_container']/div[@id='o_work_employee_main']" position="inside">
                    <group string="Projects">
                        <field name="total_projects"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
